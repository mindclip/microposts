<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
  </aside>
  <div class="col-md-8">
　  <section class="stats">
      <% if @users.any? %>
      　<div class="user_avatars">
        　<ul class="row">
            <% @users.each do |user| %>
              <div class="col-md-12">
               <%= link_to gravatar_for(user, size: 80), user %>
               <%= user.name %>
            　</div>
            <% end %>
          </div>
        </ul>
      <% end %>
　  </section>
　</div>
</div>